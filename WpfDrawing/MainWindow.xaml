<Window x:Class="WpfDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDrawing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <TabControl>
      <TabItem Header="CustomCanvasControl">
        <local:RandomDrawingCanvasControl ClipToBounds="True"/>
      </TabItem>
      <TabItem Header="CustomControl">
        <local:RandomDrawingControl ClipToBounds="True"/>
      </TabItem>
      <TabItem Header="UserControl">
        <local:RandomDrawingUserControl Background="White"/>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
